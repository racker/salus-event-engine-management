stream
  |from()
    .measurement('measurement')
    .groupBy('system_resource_id', 'system_monitor_id', 'system_monitoring_zone')
  |derivative('metric')
    .unit(1m)
    .as('rate_metric')
  |alert()
    .stateChangesOnly()
    .id('{{ .TaskName }}:{{ .Group }}')
    .details('task={{.TaskName}}')
    .history(21)
    .topic('events')