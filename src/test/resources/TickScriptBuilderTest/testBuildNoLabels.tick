stream
  |from()
    .measurement('measurement')
    .groupBy('system_resource_id', 'system_monitor_id', 'system_monitoring_zone')
  |stateDuration(lambda: ("field" > 33))
    .unit(1m)
    .as('crit_count')
  |alert()
    .stateChangesOnly()
    .id('{{ .TaskName }}:{{ .Group }}')
    .details('task={{.TaskName}}')
    .crit(lambda: "crit_count" >= 5)
    .history(21)
    .topic('events')