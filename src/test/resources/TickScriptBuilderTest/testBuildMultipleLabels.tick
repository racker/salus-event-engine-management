stream
  |from()
    .measurement('measurement')
    .groupBy('resourceId')
  |where(lambda:
    if(isPresent("resource_metadata_env"), "resource_metadata_env" == 'prod', FALSE)
      AND
    if(isPresent("resource_metadata_os"), "resource_metadata_os" == 'linux', FALSE)
      )
  |alert()
    .stateChangesOnly()
    .id('tenant:{{index .Tags "system_resourceId"}}:measurement:field')
    .details('task={{.TaskName}}')
    .crit(lambda: "field" >= 33)
    .topic('events')