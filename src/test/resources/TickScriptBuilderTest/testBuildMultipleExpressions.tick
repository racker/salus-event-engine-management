stream
  |from()
    .measurement('measurement')
    .groupBy('resourceId')
  |where(lambda:
    if(isPresent("resource_metadata_os"), "resource_metadata_os" == 'linux', FALSE)
      )
  |stateDuration(lambda: "field" > 33)
    .unit(1m)
    .as('crit_count')
  |stateDuration(lambda: "field" > 33)
    .unit(1m)
    .as('warn_count')
  |stateDuration(lambda: "field" > 20)
    .unit(1m)
    .as('info_count')
  |alert()
    .stateChangesOnly()
    .id('{{ .TaskName }}:{{ .Group }}')
    .details('task={{.TaskName}}')
    .info(lambda: "info_count" >= 1)
    .warn(lambda: "warn_count" >= 3)
    .crit(lambda: "crit_count" >= 5)
    .history(21)
    .topic('events')