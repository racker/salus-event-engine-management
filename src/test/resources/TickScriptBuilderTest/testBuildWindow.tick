stream
  |from()
    .measurement('measurement')
    .groupBy('system_resource_id')
  |window()
    .period(8m)
    .every(8m)
  |max('field1')
    .as('max_field1')
  |min('field1')
    .as('min_field1')
  |mean('field1')
    .as('avg_field1')
  |max('field2')
    .as('max_field2')
  |min('field2')
    .as('min_field2')
  |mean('field2')
    .as('avg_field2')
  |alert()
    .stateChangesOnly()
    .id('{{ .TaskName }}:{{ .Group }}')
    .details('task={{.TaskName}}')
    .history(21)
    .topic('events')